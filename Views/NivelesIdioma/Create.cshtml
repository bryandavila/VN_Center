@model VN_Center.Models.Entities.NivelesIdioma

@{
    ViewData["Title"] = "Crear Nuevo Nivel de Idioma";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administraci칩n / Niveles de Idioma /</span> Crear Nuevo Nivel
    </h4>

    <div class="row">
