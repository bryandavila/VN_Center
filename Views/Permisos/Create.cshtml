@model VN_Center.Models.Entities.Permisos

@{
    ViewData["Title"] = "Crear Nuevo Permiso";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administración / Permisos del Sistema /</span> Crear Nuevo Permiso
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Información del Nuevo Permiso</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="NombrePermiso" class="form-label"></label>
                            <input asp-for="NombrePermiso" class="form-control" placeholder="Ej: Beneficiario_VerDetalles, Solicitud_Aprobar" />
                            <span asp-validation-for="NombrePermiso" class="text-danger"></span>
                            <small class="form-text text-muted">Este es el identificador único del permiso (usar formato Modulo_Accion).</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescripcionPermiso" class="form-label"></label>
                            <textarea asp-for="DescripcionPermiso" class="form-control" rows="3" placeholder="Describa qué acción permite este permiso..."></textarea>
                            <span asp-validation-for="DescripcionPermiso" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary me-2">Crear Permiso</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
