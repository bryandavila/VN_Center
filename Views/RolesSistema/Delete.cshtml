@model VN_Center.Models.Entities.RolesSistema

@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administración / Roles del Sistema /</span> Eliminar
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0 text-danger">Confirmar Eliminación</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">¿Estás seguro de que quieres eliminar el rol "<strong>@Model.NombreRol</strong>"?</p>
                    <p class="text-warning small">Advertencia: Eliminar un rol puede afectar a los usuarios que lo tengan asignado. Asegúrate de que ningún usuario dependa de este rol o reasígnalos antes de eliminar.</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreRol)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreRol)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DescripcionRol)</dt>
                        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.DescripcionRol) ? "Sin descripción" : Model.DescripcionRol)</dd>
                    </dl>

                    <form asp-action="Delete" method="post" id="deleteForm" class="mt-4">
                        <input type="hidden" asp-for="RolUsuarioID" />
                        <button type="button" id="btnConfirmDelete" class="btn btn-danger me-2">Sí, Eliminar Rol</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteButton = document.getElementById('btnConfirmDelete');
            if (deleteButton) {
                deleteButton.addEventListener('click', function (event) {
                    event.preventDefault();

                    Swal.fire({
                        title: '¿Estás realmente seguro?',
                        html: "¡No podrás revertir la eliminación de este rol!<br><strong class='text-warning'>Asegúrate de que ningún usuario esté usando este rol.</strong>",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Sí, ¡elimínalo!',
                        cancelButtonText: 'No, cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('deleteForm').submit();
                        }
                    });
                });
            }
        });
    </script>
}
