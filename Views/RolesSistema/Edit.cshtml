@model VN_Center.Models.Entities.RolesSistema
@{
    ViewData["Title"] = "Editar Rol";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administraci√≥n / Roles del Sistema /</span> Editar Rol
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    @* Actualizado para usar Model.Name *@
                    <h5 class="mb-0">Editando Rol: @Model.Name</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        @* Actualizado asp-for para usar "Id" en lugar de "RolUsuarioID" *@
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            @* Actualizado asp-for y el label para que usen "Name" *@
                            <label asp-for="Name" class="form-label">Nombre del Rol</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescripcionRol" class="form-label"></label>
                            <textarea asp-for="DescripcionRol" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="DescripcionRol" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary me-2">Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
