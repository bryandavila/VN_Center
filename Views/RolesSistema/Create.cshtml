@model VN_Center.Models.Entities.RolesSistema
@{
    ViewData["Title"] = "Crear Nuevo Rol";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administración / Roles del Sistema /</span> Crear Nuevo Rol
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Información del Nuevo Rol</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            @* Actualizado asp-for y el label para que usen "Name" en lugar de "NombreRol" *@
                            <label asp-for="Name" class="form-label">Nombre del Rol</label>
                            <input asp-for="Name" class="form-control" placeholder="Ej: Administrador, Editor, Visitante" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescripcionRol" class="form-label"></label>
                            <textarea asp-for="DescripcionRol" class="form-control" rows="3" placeholder="Describa brevemente las responsabilidades o acceso de este rol..."></textarea>
                            <span asp-validation-for="DescripcionRol" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary me-2">Crear Rol</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
