    <script>
        // Script para manejar la visibilidad de campos "Otro" (exactamente el mismo que en Create.cshtml)
        document.addEventListener('DOMContentLoaded', function () {
            function setupOtroFieldToggle(triggerInputId, otroFieldContainerId, triggerValue = 'otro') {
                const triggerInput = document.getElementById(triggerInputId);
                const otroFieldDiv = document.getElementById(otroFieldContainerId)?.closest('.mb-3');

                function toggleVisibility() {
                    if (triggerInput && otroFieldDiv) {
                        let show = false;
                        if (triggerInput.tagName.toLowerCase() === 'select') {
                            const selectedOptionText = triggerInput.options[triggerInput.selectedIndex]?.text;
                            if (selectedOptionText && selectedOptionText.trim().toLowerCase().includes(triggerValue.toLowerCase())) { // includes para "Otro (especificar)"
                                show = true;
                            }
                        } else {
                            if (triggerInput.value.trim().toLowerCase() === triggerValue.toLowerCase()) {
                                show = true;
                            }
                        }
                        otroFieldDiv.style.display = show ? 'block' : 'none';
                    }
                }

                if (triggerInput) {
                    const eventType = triggerInput.tagName.toLowerCase() === 'select' ? 'change' : 'input';
                    triggerInput.addEventListener(eventType, toggleVisibility);
                    toggleVisibility();
                }
            }

            setupOtroFieldToggle('PaisOrigen', 'OtroPaisOrigen');
            setupOtroFieldToggle('EstadoMigratorio', 'OtroEstadoMigratorio');
            setupOtroFieldToggle('TipoSituacionLaboral', 'OtroTipoSituacionLaboral');
