@model VN_Center.Models.Entities.BeneficiarioAsistenciaRecibida

@{
    ViewData["Title"] = "Detalles de Asistencia a Beneficiario";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Asistencia a Beneficiarios /</span> Detalles
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Asistencia para: @(Model.Beneficiario?.NombreCompleto ?? "Beneficiario Desconocido")</h5>
                    <div>
                        <a asp-action="Edit" asp-route-beneficiarioId="@Model.BeneficiarioID" asp-route-tipoAsistenciaId="@Model.TipoAsistenciaID" class="btn btn-primary me-2"><i class="bx bx-edit-alt me-1"></i> Editar Notas</a>
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bx bx-list-ul me-1"></i> Volver a la Lista</a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Beneficiario</dt>
                        <dd class="col-sm-8">@(Model.Beneficiario?.Apellidos), @(Model.Beneficiario?.Nombres) (ID: @Model.BeneficiarioID)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TipoAsistencia.NombreAsistencia)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoAsistencia.NombreAsistencia)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NotasAdicionales)</dt>
                        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.NotasAdicionales) ? "Sin notas adicionales" : Html.Raw(Model.NotasAdicionales.Replace("\n", "<br />")))</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
