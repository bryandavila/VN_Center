@model VN_Center.Models.Entities.Comunidades

@{
    ViewData["Title"] = "Editar Comunidad";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Comunidades /</span> Editar
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Editando Comunidad: @Model.NombreComunidad</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="ComunidadID" />

                        <div class="mb-3">
                            <label asp-for="NombreComunidad" class="form-label"></label>
                            <input asp-for="NombreComunidad" class="form-control" />
                            <span asp-validation-for="NombreComunidad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UbicacionDetallada" class="form-label"></label>
                            <textarea asp-for="UbicacionDetallada" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="UbicacionDetallada" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NotasComunidad" class="form-label"></label>
                            <textarea asp-for="NotasComunidad" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="NotasComunidad" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary me-2">Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
