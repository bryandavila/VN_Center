@model VN_Center.Models.Entities.Comunidades

@{
    ViewData["Title"] = "Detalles de la Comunidad";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Comunidades /</span> Detalles
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Detalles: @Model.NombreComunidad</h5>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Volver a la Lista</a>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3 text-md-end">
                            @Html.DisplayNameFor(model => model.NombreComunidad)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.NombreComunidad)
                        </dd>

                        <dt class="col-sm-3 text-md-end">
                            @Html.DisplayNameFor(model => model.UbicacionDetallada)
                        </dt>
                        <dd class="col-sm-9">
                            @(string.IsNullOrEmpty(Model.UbicacionDetallada) ? "No especificada" : Model.UbicacionDetallada)
                        </dd>

                        <dt class="col-sm-3 text-md-end">
                            @Html.DisplayNameFor(model => model.NotasComunidad)
                        </dt>
                        <dd class="col-sm-9">
                            @(string.IsNullOrEmpty(Model.NotasComunidad) ? "Sin notas" : Model.NotasComunidad)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model?.ComunidadID" class="btn btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
