@* VN_Center/Views/Auditoria/Details.cshtml *@
@model VN_Center.Models.Entities.RegistrosAuditoria

@{
    ViewData["Title"] = "Detalle del Registro de Auditoría";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Auditoría /</span> Detalle del Registro ID: @Model.AuditoriaID
    </h4>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Información del Evento</h5>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bx bx-list-ul me-1"></i> Volver a la Lista</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AuditoriaID)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AuditoriaID)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaHoraEvento)</dt>
                <dd class="col-sm-9">@Model.FechaHoraEvento.ToString("dd/MM/yyyy HH:mm:ss.fff")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreUsuarioEjecutor)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuarioEjecutor) (@Html.DisplayFor(model => model.UsuarioEjecutorId))</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TipoEvento)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoEvento)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EntidadAfectada)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EntidadAfectada)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdEntidadAfectada)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdEntidadAfectada)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DireccionIp)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DireccionIp)</dd>

                <dt class="col-sm-3 mt-3">@Html.DisplayNameFor(model => model.DetallesCambio)</dt>
                <dd class="col-sm-9 mt-3">
                    <pre style="white-space: pre-wrap; word-wrap: break-word; background-color: #f8f9fa; padding: 10px; border-radius: 4px; border: 1px solid #dee2e6;">@Html.DisplayFor(model => model.DetallesCambio)</pre>
                </dd>
            </dl>
        </div>
    </div>
</div>
