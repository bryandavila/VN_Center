@model VN_Center.Models.Entities.RolPermisos

@{
    ViewData["Title"] = "Detalles de Asignación de Permiso";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administración / Asignar Permisos a Roles /</span> Detalles
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Detalles de la Asignación</h5>
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bx bx-list-ul me-1"></i> Volver a la Lista</a>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @* Actualizado para usar RolesSistema.Name. El DisplayNameFor puede seguir apuntando a la propiedad original si el texto es genérico "Rol" *@
                            Rol
                            @* @Html.DisplayNameFor(model => model.RolesSistema.Name) *@
                        </dt>
                        <dd class="col-sm-8">
                            @* Actualizado para usar RolesSistema.Name *@
                            @Html.DisplayFor(model => model.RolesSistema.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Permisos.NombrePermiso)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Permisos.NombrePermiso)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Permisos.DescripcionPermiso)
                        </dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.Permisos.DescripcionPermiso) ? "Sin descripción" : Model.Permisos.DescripcionPermiso)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    @* Edit no está implementado por defecto para este tipo de PK compuestas.
                       Si se implementara, los asp-route- deberían ser asp-route-rolId y asp-route-permisoId
                    *@
                    @* <a asp-action="Edit" asp-route-rolId="@Model.RolUsuarioID" asp-route-permisoId="@Model.PermisoID" class="btn btn-primary">Editar</a> *@
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
