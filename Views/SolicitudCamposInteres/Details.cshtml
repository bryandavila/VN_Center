@model VN_Center.Models.Entities.SolicitudCamposInteres

@{
    ViewData["Title"] = "Detalles de Asignación de Interés";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Gestión de Datos / Asignar Intereses a Solicitudes /</span> Detalles
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Detalles de la Asignación</h5>
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bx bx-list-ul me-1"></i> Volver a la Lista</a>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            Solicitante
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.Solicitud?.Apellidos), @(Model.Solicitud?.Nombres) (ID: @Model.SolicitudID)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CampoInteresVocacional.NombreCampo)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CampoInteresVocacional.NombreCampo)
                        </dd>
                        <dt class="col-sm-4">
                            Descripción del Interés
                        </dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.CampoInteresVocacional.DescripcionCampo) ? "Sin descripción" : Model.CampoInteresVocacional.DescripcionCampo)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
