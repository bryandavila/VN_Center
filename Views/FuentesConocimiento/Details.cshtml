@model VN_Center.Models.Entities.FuentesConocimiento

@{
    ViewData["Title"] = "Detalles de la Fuente de Conocimiento";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administraci√≥n / Fuentes de Conocimiento /</span> Detalles
    </h4>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Fuente: @Model.NombreFuente</h5>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.FuenteConocimientoID" class="btn btn-primary me-2"><i class="bx bx-edit-alt me-1"></i> Editar</a>
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bx bx-list-ul me-1"></i> Volver a la Lista</a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreFuente)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreFuente)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
