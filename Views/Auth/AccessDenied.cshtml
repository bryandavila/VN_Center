@* VN_Center/Views/Auth/AccessDenied.cshtml *@
@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = "_BlankLayout"; // O el layout que prefieras para esta página
    // Asegúrate de que Tailwind CSS esté correctamente vinculado en tu _BlankLayout.cshtml o globalmente
    // para que los estilos de esta página se apliquen correctamente.
    // Puedes añadirlo vía CDN en tu layout si aún no lo usas:
    // <head>
    //   <script src="https://cdn.tailwindcss.com"></script>
    // </head>
}

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-4 text-center">
    <div class="bg-white p-8 sm:p-12 rounded-xl shadow-2xl max-w-md w-full">

        <div class="mx-auto mb-6 h-20 w-20 text-red-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full h-full">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636M12 18.75h.008v.008H12v-.008ZM12 14.25a.75.75 0 0 1 .75.75v.008c0 .414-.336.75-.75.75h-.008a.75.75 0 0 1-.75-.75v-.008c0-.414.336.75.75-.75h.008ZM12 9.75A.75.75 0 0 0 11.25 9h-.008a.75.75 0 0 0-.75.75v.008c0 .414.336.75.75.75h.008A.75.75 0 0 0 12 10.5v-.008a.75.75 0 0 0-.75-.75H12Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Z" />
            </svg>
        </div>

        <h1 class="text-4xl sm:text-5xl font-bold text-gray-800 mb-3">Acceso Denegado</h1>
        <p class="text-gray-600 text-lg mb-8">
            Lo sentimos, no tienes los permisos necesarios para acceder a esta página.
        </p>
        <p class="text-gray-500 text-sm mb-8">
            Si crees que esto es un error, por favor, contacta al administrador del sistema.
        </p>

        <a asp-controller="Dashboards" asp-action="Index"
           class="inline-block w-full sm:w-auto px-8 py-3.5 text-lg font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 rounded-lg shadow-md hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-150 ease-in-out"
           style="background-color: #2563eb; color: white; padding: 14px 32px; text-decoration: none; border-radius: 0.5rem; display: inline-block; font-size: 1.125rem; line-height: 1.75rem; font-weight: 500; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -2px rgba(0,0,0,0.1);">
            Volver al Inicio
        </a>
    </div>

    <footer class="mt-12 text-center">
        <p class="text-sm text-gray-500">
            &copy; @DateTime.Now.Year VN Center. Todos los derechos reservados.
        </p>
    </footer>
</div>

<script>
    // Pequeño script para añadir una clase al body si el layout no lo hace
    // y asegurar que el fondo cubra toda la pantalla.
    // Si tu _BlankLayout ya maneja esto, puedes omitirlo.
    if (document.body.classList.contains('bg-gray-100') === false) {
        document.body.classList.add('bg-gray-100');
    }
</script>
