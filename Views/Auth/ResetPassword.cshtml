    @model VN_Center.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Restablecer Contraseña";
    Layout = "_BlankLayout";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
    }

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-6">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <div class="app-brand justify-content-center mb-5">
                        <a asp-controller="Home" asp-action="Index" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
                            <span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
                        </a>
                    </div>
                    <h4 class="mb-1">Restablecer Contraseña 🔒</h4>
                    <p class="mb-6">Por favor, ingresa tu nueva contraseña.</p>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form asp-action="ResetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-6 form-password-toggle">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="Password" class="form-control" placeholder="············" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-6 form-password-toggle">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="············" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button class="btn btn-primary d-grid w-100" type="submit">Restablecer Contraseña</button>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-controller="Auth" asp-action="LoginBasic" class="d-flex align-items-center justify-content-center">
                            <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                            Volver a Iniciar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
