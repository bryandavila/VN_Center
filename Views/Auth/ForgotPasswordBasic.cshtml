@model VN_Center.Models.ViewModels.ForgotPasswordViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Olvidé mi Contraseña";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-6">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <div class="app-brand justify-content-center mb-5">
                        <a asp-controller="Home" asp-action="Index" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
                            <span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
                        </a>
                    </div>
                    @* CENTRADO AÑADIDO AQUÍ *@
                    <div class="text-center">
                        <h4 class="mb-1">¿Olvidaste tu Contraseña? 🔒</h4>
                        <p class="mb-6">Ingresa tu correo electrónico y te enviaremos instrucciones para restablecer tu contraseña.</p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form id="formAuthentication" class="mb-6" asp-controller="Auth" asp-action="ForgotPasswordBasic" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Ingresa tu correo electrónico" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button class="btn btn-primary d-grid w-100" type="submit">Enviar Enlace de Restablecimiento</button>
                    </form>
                    <div class="text-center">
                        <a asp-controller="Auth" asp-action="LoginBasic" class="d-flex align-items-center justify-content-center">
                            <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                            Volver a Iniciar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
