@* VN_Center/Views/UsuariosSistema/Details.cshtml *@
@model VN_Center.Models.ViewModels.UsuarioSistemaViewModel
@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Administración / Usuarios del Sistema /</span> Detalles
    </h4>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Usuario: @Model.UserName</h5>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2"><i class="bx bx-edit-alt me-1"></i> Editar</a>
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bx bx-list-ul me-1"></i> Volver a la Lista</a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nombres)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Nombres)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Apellidos)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Apellidos)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.UserName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.UserName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>

                        <dt class="col-sm-4">Rol(es)</dt>
                        <dd class="col-sm-8">
                            @if (Model.Roles != null && Model.Roles.Any())
                            {
                                @string.Join(", ", Model.Roles)
                            }
                            else
                            {
                                @:No asignado
                            }
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Activo)</dt>
                        <dd class="col-sm-8">
                            @if (Model.Activo)
                            {
                                <span class="badge bg-label-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-label-danger">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Email Confirmado</dt>
                        <dd class="col-sm-8">@(Model.EmailConfirmed ? "Sí" : "No")</dd>

                        <dt class="col-sm-4">Cuenta Bloqueada</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsLockedOut)
                            {
                                <span class="text-danger">Sí (hasta @Model.LockoutEndDateUtc?.ToString("g"))</span>
                            }
                            else
                            {
                                @:No
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
